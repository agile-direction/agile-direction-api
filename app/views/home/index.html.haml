%section#welcome-treatment
  %h1.logo
    %span.keep KEEP
    %br
    %span.delivering DELIVERING
    %br
    %span#missions-happening
      - mission_name_tag = content_tag(:span, nil, { id: "mission-name" })
      = t(".mission-happening_html", { mission_name_tag: mission_name_tag })

  %p
    - mission_link = link_to(t("home.index.description.mission_link"), glossary_path({ anchor: :mission }))
    - deliverable_link = link_to(t("home.index.description.deliverable_link"), glossary_path({ anchor: :deliverable }))
    = t("home.index.description.text_html", { mission_link: mission_link, deliverable_link: deliverable_link })
  = link_to(t("home.index.create_a_mission_html"), new_mission_path, { class: "action" })

%section#mission-count.contrast
  #mission-count-background
    = @missions.collect(&:name).to_sentence
  #mission-count-foreground
    %h2= t("home.index.active-missions_html", { count: @mission_count })
    = link_to(t(".take-a-look"), missions_path)
