= form_for @mission do |f|
  - if @mission.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mission.errors.count, "error")} prohibited this mission from being saved:"
      %ul
        - @mission.errors.full_messages.each do |msg|
          %li= msg

  .fill-me-in
    = f.label(:name)
    = f.text_field(:name, { required: true, autofocus: true })

  .fill-me-in
    = f.label(:description)
    = f.text_field(:description)

  .actions
    = f.submit 'Save'
