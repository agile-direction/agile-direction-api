- if notice
  %p#notice= notice

%h2
  = @mission.name

%p
  = @mission.description

= link_to(t("missions.show.edit"), edit_mission_path(@mission))

- if @mission.deliverables.any?
  %h3= t("missions.show.deliverables")
  %ul
    - @mission.deliverables.each do |deliverable|
      - edit_link = link_to(t("missions.show.show"), mission_deliverable_path(@mission, deliverable))
      %li
        = t("missions.show.deliverable_html", { name: deliverable.name, edit_link: edit_link })
        %span.subnote= deliverable.value
- else
  %p= t("missions.show.now-what_html", { mission_name: @mission.name })

= link_to(t("missions.show.add-deliverable"), new_mission_deliverable_path(@mission))
